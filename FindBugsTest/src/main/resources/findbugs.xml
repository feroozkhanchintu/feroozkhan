<?xml version="1.0" encoding="UTF-8"?>

<FindbugsPlugin xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   				xsi:noNamespaceSchemaLocation="findbugsplugin.xsd"
				pluginid="codenation.threads.findbugs.plugin"
                defaultenabled="true"
                provider="Codenation">
                

  <Detector class="com.codenation.findbugs.ThreadRunDetector" speed="fast" reports="THREAD_RUN_BUG_1"/>
    <Detector class="com.codenation.findbugs.RunnableRunDetector" speed="fast" reports="THREAD_RUN_BUG_2"/>


  <BugPattern type="THREAD_RUN_BUG_1" abbrev="THREAD" category="BAD_PRACTICE" />
    <BugPattern type="THREAD_RUN_BUG_2" abbrev="THREAD" category="BAD_PRACTICE" />


</FindbugsPlugin>